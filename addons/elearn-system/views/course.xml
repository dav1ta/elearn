<odoo>

  <data>
<record id="view_course_form" model="ir.ui.view">
        <field name="name">elearn.course.form</field>
        <field name="model">elearn.course</field>
        <field name="arch" type="xml">
            <form string="Course Form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="subject_id"/>
                        <field name="teacher_id"/>
                        <field name="student_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

  </data>
 

    <record id="view_course_tree" model="ir.ui.view">
        <field name="name">elearn.course.tree</field>
        <field name="model">elearn.course</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="subject_id"/>
                <field name="teacher_id"/>
            </tree>
        </field>
    </record>
</odoo>
